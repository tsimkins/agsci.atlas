    <!-- Water Source Attribute Vocabulary -->

    <utility
        name="agsci.atlas.filter.WaterSource"
        provides="zope.schema.interfaces.IVocabularyFactory"
        component=".vocabulary.filters.WaterSourceVocabularyFactory"
    />


    <!-- Adapter: Calculate Webinar Recording Name -->

    <adapter
        for=".event.webinar.recording.IWebinarRecording"
        provides=".event.webinar.recording.ITitleFromWebinar"
        factory=".event.webinar.recording.TitleFromWebinar"
    />

</configure>
