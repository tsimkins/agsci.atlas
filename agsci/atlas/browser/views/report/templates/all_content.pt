<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:title fill-slot="content-title">
    <h1 class="documentFirstHeading">
        All Content
    </h1>
</metal:title>

<metal:content-core fill-slot="content-core">

    <tal:structure tal:repeat="i view/getContentStructure">
        <h2 tal:content="i/Type" />
        
        <ul>
            <li tal:repeat="item i/brains">
                <a tal:content="item/Title" 
                   tal:attributes="href item/getURL;
                                   class string:state-${item/review_state}" />

                <metal:issue-summary use-macro="context/@@folder_listing/macros/issue_summary" />
                                       
                <div tal:content="item/Description" />
            </li>
        </ul>
        
    </tal:structure>

</metal:content-core>

</body>
</html>