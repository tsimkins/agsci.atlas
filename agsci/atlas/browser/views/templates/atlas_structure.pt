<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:title fill-slot="content-description">

    <p class="documentDescription"
        tal:content="view/title" />

</metal:title>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">

        <metal:sub-navigation metal:use-macro="context/@@atlas_owner_review/macros/sub-navigation" />

        <tal:body define="folderContents view/getFolderContents|nothing">

            <h2>Products</h2>

            <div class="product-listing"
                    tal:define="limit_display python: int(30);">

                <p class="discreet"
                   tal:condition="folderContents">

                    <strong tal:content="python: len(folderContents)" /> product(s) found.
                </p>

                <metal:listing metal:use-macro="context/@@folder_summary_view/macros/listing">

                    <metal:empty metal:fill-slot="no_items_in_listing">
                        <p class="discreet"
                            tal:condition="not: folderContents">
                            No products found.
                        </p>
                    </metal:empty>

                </metal:listing>

                <div class="visualClear"><!-- --></div>
            </div>

        </tal:body>

    </metal:content-core>
</metal:main>

</body>
</html>
