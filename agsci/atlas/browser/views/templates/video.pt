<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-core">

    <tal:page
        define="page nocall:context;
                adjust_headings python:False">

        <metal:content-core define-macro="content-core">

            <h2>Video</h2>

            <div
                class="video"
                tal:define="video_id view/getVideoId|nothing;
                            video_provider view/getVideoProvider|nothing;"
                tal:condition="video_id">

                <iframe
                    tal:condition="python: video_provider == 'YouTube'"
                    width="480"
                    height="360"
                    tal:attributes="src string://www.youtube.com/embed/${video_id}?rel=0"
                    frameborder="0"
                    webkitallowfullscreen
                    mozallowfullscreen
                    allowfullscreen></iframe>

                <iframe
                    tal:condition="python: video_provider == 'Vimeo'"
                    tal:attributes="src string://player.vimeo.com/video/${video_id}"
                    width="500"
                    height="209"
                    frameborder="0"
                    webkitallowfullscreen
                    mozallowfullscreen
                    allowfullscreen></iframe>
            </div>

            <tal:video_text
                tal:define="text context/text/output|nothing"
                tal:condition="text">
                <h2>Text</h2>
                <tal:text replace="structure text" />
            </tal:video_text>

        </metal:content-core>

    </tal:page>

</metal:main>

</body>
</html>
