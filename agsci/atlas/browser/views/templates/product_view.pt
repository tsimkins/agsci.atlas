<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">

        <div tal:content="structure view/getText" />

        <metal:pages define-macro="pages">

            <tal:header condition="view/pages">
                <metal:header define-slot="header" />
            </tal:header>

            <div class="issue-summary">
                
                <ul tal:repeat="page view/pages"
                    tal:define="adjust_headings python:True">
                    <li>
                        <a tal:attributes="href page/getURL;
                                           data-type page/Type;"
                           tal:content="page/Title" />
                        <span tal:replace="structure python: view.getIssues(page)" />
                    </li>
                </ul>
    
            </div>

        </metal:pages>
    
    </metal:content-core>
</metal:main>

</body>
</html>
