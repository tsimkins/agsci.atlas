<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <tal:link
        define="link context/webinar_recorded_url|nothing"
        condition="link">

        <h2>Recording URL</h2>
        <p>
            <a tal:attributes="href link" tal:content="context/Title" />
        </p>


    </tal:link>

    <tal:duration
        define="duration context/duration_formatted|nothing"
        condition="duration">

        <h2>Duration</h2>
        <p tal:content="duration" />

    </tal:duration>

    <tal:transcript
        define="transcript context/transcript|nothing"
        condition="transcript">

        <h2>Transcript</h2>
        <pre tal:content="transcript" />

    </tal:transcript>

    <tal:presentations
        define="presentations view/presentations"
        condition="presentations">

        <h2>Presentations</h2>
        <ul tal:repeat="i presentations">
            <li>
                <a tal:attributes="href i/getURL" tal:content="i/Title" />
                <tal:description condition="i/Description">
                (<span tal:content="i/Description" />)
                </tal:description>
            </li>
        </ul>

    </tal:presentations>

    <tal:handouts
        define="handouts view/handouts"
        condition="handouts">

        <h2>Handouts</h2>
        <ul tal:repeat="i handouts">
            <li>
                <a tal:attributes="href i/getURL" tal:content="i/Title" />
                <tal:description condition="i/Description">
                (<span tal:content="i/Description" />)
                </tal:description>
            </li>
        </ul>

    </tal:handouts>

  </metal:content-core>
</metal:main>

</body>
</html>
