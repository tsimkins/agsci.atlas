<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>
<metal:content-core fill-slot="content-core">

    <div>
        <div class="listItem list-item-columns-4">
            <metal:sub-navigation metal:use-macro="context/@@atlas_owner_review/macros/sub-navigation-base" />
        </div>

        <div class="listItem list-item-columns-4">
            <h2>Categories</h2>

            <ul tal:define="items view/getCategories|nothing"
                tal:condition="items">

                <li tal:repeat="item items">
                    <a tal:attributes="href item/getURL"
                       tal:content="item/Title" />
                </li>
            </ul>
        </div>

        <div class="listItem list-item-columns-4">
            <h2>Teams</h2>

            <ul tal:define="items view/getTeams|nothing"
                tal:condition="items">

                <li tal:repeat="item items">
                    <a tal:attributes="href item/getURL"
                       tal:content="item/Title" />
                </li>
            </ul>
        </div>

        <div class="listItem list-item-columns-4">
            <h2>Directory</h2>
            <ul tal:define="items view/getDirectories|nothing"
                tal:condition="items">

                <li tal:repeat="item items">
                    <a tal:attributes="href item/getURL"
                       tal:content="item/Title" />
                </li>
            </ul>

            <h2>Reports</h2>

            <ul>
                <li>
                    <a tal:attributes="href string:${context/absolute_url}/@@content_checks">Content Issues</a>
                </li>
                <li>
                    <a tal:attributes="href string:${context/absolute_url}/@@category_product_count">Category Product Count</a>
                </li>
            </ul>

        </div>

        <div class="visualClear"><!-- --></div>
    </div>

</metal:content-core>
</body>
</html>
