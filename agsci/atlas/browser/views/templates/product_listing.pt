<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="plone.app.dexterity">
<body>

    <tal:block
        define="folderContents python: []">

        <metal:product-listing
               define-macro="product-listing">
            
            <metal:heading define-slot="product-heading">
                <h2>Products</h2>
            </metal:heading>
    
            <p class="discreet"
                tal:condition="folderContents">
    
                <strong tal:content="python: len(folderContents)" /> product(s) found.
            </p>
    
            <div class="product-listing"
                    tal:define="default_limit_display python: int(30);
                                limit_display limit_display|default_limit_display;">
    
                <metal:listing metal:use-macro="context/@@folder_summary_view/macros/listing">
    
                    <metal:empty metal:fill-slot="no_items_in_listing">
                        <p class="discreet"
                            tal:condition="not: folderContents">
                            No products found.
                        </p>
                    </metal:empty>
    
                </metal:listing>
    
                <div class="visualClear"><!-- --></div>
            </div>
    
        </metal:product-listing>
    </tal:block>
</body>
</html>