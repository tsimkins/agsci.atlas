<tal:show condition="view/show">

    <dl tal:condition="view/show_new"
        class="portalMessage info">
        <dt>Info</dt>
        <dd>
            This content has been
            <a tal:attributes="href view/new_url">imported to the public website</a>.
            <span class="discreet">*Requires hosts file updates!</span>
        </dd>
    </dl>

    <dl tal:condition="view/show_old"
        class="portalMessage info">
        <dt>Info</dt>
        <dd>
            This content was
            <a tal:attributes="href view/old_url">imported from the old content
            management system</a>.
        </dd>
    </dl>

</tal:show>