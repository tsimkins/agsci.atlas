<tal:environment
    tal:define="alternate_environment view/environment|nothing">

    <a id="portal-logo"
       title="Home"
       accesskey="1"
       tal:attributes="href view/navigation_root_url;
                       title view/navigation_root_title"
       i18n:domain="plone"
       i18n:attributes="title">
        <span 
            tal:condition="alternate_environment"
            tal:content="alternate_environment" />

        <img src="logo.png" alt=""
             tal:condition="not: alternate_environment"
             tal:attributes="alt view/logo_title;
                             title view/logo_title;
                             src view/img_src" /></a>

</tal:environment>
