<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div class="documentText"
        tal:define="text context/text"
        tal:condition="text"
        tal:content="structure text/raw" />

    <tal:link 
        define="link view/link"
        condition="link">
        
        <h2>Recording</h2>
        <ul>
            <li>
                <a tal:attributes="href link" tal:content="context/Title" />
            </li>
        </ul>
        
    </tal:link>

    <tal:speakers 
        define="speakers view/speakers"
        condition="speakers">
        
        <h2>Speakers</h2>
        <ul tal:repeat="i speakers">
            <li tal:content="i" />
        </ul>
        
    </tal:speakers>

    <tal:presentations 
        define="presentations view/presentations"
        condition="presentations">
        
        <h2>Presentations</h2>
        <ul tal:repeat="i presentations">
            <li>
                <a tal:attributes="href i/getURL" tal:content="i/Title" />
                <tal:description condition="i/Description">
                (<span tal:content="i/Description" />)
                </tal:description>
            </li>
        </ul>
        
    </tal:presentations>

    <tal:handouts 
        define="handouts view/handouts"
        condition="handouts">
        
        <h2>Handouts</h2>
        <ul tal:repeat="i handouts">
            <li>
                <a tal:attributes="href i/getURL" tal:content="i/Title" />
                <tal:description condition="i/Description">
                (<span tal:content="i/Description" />)
                </tal:description>
            </li>
        </ul>
        
    </tal:handouts>

  </metal:content-core>
</metal:main>

</body>
</html>
