<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">

        <div tal:content="structure view/getText" />
        <div class="documentPage" 
            tal:repeat="page view/pages"
            tal:define="adjust_headings python:True">
            <h2> <a tal:attributes="href page/absolute_url" tal:content="page/Title" /> </h2>
            <p class="documentDescription" tal:content="page/Description" />
            <metal:content-core use-macro="page/@@view/macros/content-core" />
        </div>
    
    </metal:content-core>
</metal:main>

</body>
</html>
